{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "MgmtPublicIPAddressName": {
      "type": "string"
    },
    "publicIPAddressType": {
      "type": "string"
    },
    "MgmtPublicIPRGName": {
      "type": "string"
    },
    "UntrustPublicIPAddressName": {
      "type": "string"
    },
    "UntrustPublicIP": {
      "type": "string"
    },
    "baseUrl": {
      "type": "string"
    }
  },
  "variables": {
    "SettingUpPublicIPUrl": "[concat(parameters('baseUrl'),'/publicip-untrust-',parameters('UntrustPublicIP'),'.json')]"
  },
  "resources": [
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[parameters('MgmtPublicIPAddressName')]",
      "location": "[parameters('location')]",
      "properties": {
        "publicIPAllocationMethod": "[parameters('publicIPAddressType')]",
        "dnsSettings": {
          "domainNameLabel": "[parameters('MgmtPublicIPAddressName')]"
        }
      }
    },
    {
      "name": "UntrustSettingUpPublicIPs",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "properties": { 
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('SettingUpPublicIPUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "publicIPAddressType": {
            "value": "[parameters('publicIPAddressType')]"
          },
          "UntrustPublicIPAddressName" : {
            "value": "[parameters('UntrustPublicIPAddressName')]"
          }
        }
      }
    }
  ],
  "outputs": {
    "publicIpId": {
      "value": "[resourceId(concat('Microsoft.Network','/','publicIPAddresses'),parameters('MgmtPublicIPAddressName'))]",
      "type": "string"
    },
    "fqdn": {
      "value": "[reference(resourceId('Microsoft.Network/publicIPAddresses',parameters('MgmtPublicIPAddressName')),providers('Microsoft.Network', 'publicIPAddresses').apiVersions[0]).dnsSettings.fqdn]",
      "type": "string"
    }
  }
}
